<% @livro.errors.full_messages.each do |messages| %>
  <div class="alert alert-danger">
    <%= messages %>
  </div>
<% end %>

<%= form_for @livro do |l| %>

  <div class="form-group">
    <%= l.label :nome %>
    <%= l.text_field :nome, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= l.label :autor %>
    <%= l.text_field :autor, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= l.label :editora %>
    <%= l.text_field :editora, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= l.label :nota %>
    <%= l.number_field :nota, step: 1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= l.label :descricao %>
    <%= l.text_area :descricao, rows: 4, class: "form-control" %>
  </div>

  <div style="margin-top: 0.2cm;">
    <%= l.submit texto_da_acao, class: "btn btn-primary form-control" %>
  </div>

<% end %>
